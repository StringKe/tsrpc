{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "project": "packages/utils/package.json",
        "outputPath": "dist/utils/types",
        "main": "packages/utils/src/index.ts",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "format": [
          "esm",
          "cjs"
        ],
        "generateExportsField": true,
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/utils/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/utils/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish-npm": {
      "executor": "@ntsrpc/npm-deploy:deploy",
      "options": {
        "access": "restricted",
        "registry": "https://registry.npmjs.org/",
        "replaceScope": "ntsrpc"
      }
    },
    "publish-github": {
      "executor": "@ntsrpc/npm-deploy:deploy",
      "options": {
        "access": "restricted",
        "registry": "https://npm.pkg.github.com/",
        "replaceScope": "stringke"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run utils:publish-npm",
          "nx run utils:publish-github"
        ]
      }
    }
  },
  "tags": [
    "utils"
  ]
}
