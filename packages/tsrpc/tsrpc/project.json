{
    "name": "tsrpc-tsrpc",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/tsrpc/tsrpc/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/tsrpc/tsrpc",
                "main": "packages/tsrpc/tsrpc/src/index.ts",
                "tsConfig": "packages/tsrpc/tsrpc/tsconfig.lib.json",
                "assets": []
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs tsrpc-tsrpc {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/tsrpc/tsrpc/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/tsrpc/tsrpc/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": ["tsrpc"]
}
